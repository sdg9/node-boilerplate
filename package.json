{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for node projects",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "10.8.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "lint": "eslint --cache --ignore-path .gitignore ./packages/*/src",
    "heroku-postbuild": "npm run build",
    "build": "lerna exec --parallel -- babel src/ --out-dir dist/ --presets @babel/preset-flow --presets @babel/preset-env",
    "main-app": "nodemon -r dotenv/config index.js",
    "dev": "concurrently \"yarn watch\" \"yarn main-app\" ",
    "flow": "flow",
    "test": "jest",
    "prettify": "prettier --write ./packages/*/src/**/*.js",
    "watch": "yarn build -- -w"
  },
  "dependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "concurrently": "^4.0.1",
    "dotenv": "^6.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.80.0",
    "jest": "^23.5.0",
    "lerna": "^3.4.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2"
  },
  "jest": {
    "testRegex": "/__tests__/.*-test.js?$",
    "roots": [
      "src"
    ]
  }
}
